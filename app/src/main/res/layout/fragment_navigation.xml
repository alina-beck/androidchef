<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".features.onboarding.NavigationFragment">

    <Button
        android:id="@+id/button_new_recipe"
        android:text="@string/new_recipe"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/button_get_menu"
        android:text="@string/create_random_menu"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/button_all_recipes"
        android:text="@string/show_all_recipes"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
