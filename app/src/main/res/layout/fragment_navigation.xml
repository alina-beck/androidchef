<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:columnCount="2"
    android:rowCount="3"
    tools:context=".features.onboarding.NavigationFragment">

    <ava.androidchef.utils.NavigationButton
        android:id="@+id/button_goto_all_recipes"
        style="@style/ChefTheme.Button.Navigation"/>

    <ava.androidchef.utils.NavigationButton
        android:id="@+id/button_goto_add_recipe"
        style="@style/ChefTheme.Button.Navigation"/>

    <ava.androidchef.utils.NavigationButton
        android:id="@+id/button_goto_current_menu"
        style="@style/ChefTheme.Button.Navigation"/>

    <ava.androidchef.utils.NavigationButton
        android:id="@+id/button_goto_create_menu"
        style="@style/ChefTheme.Button.Navigation"/>

    <Button
        android:id="@+id/button_goto_shopping_list"
        style="@style/ChefTheme.Button.Navigation.Double"/>

</GridLayout>
