<resources>

    <!-- Base application theme. -->
    <style name="ChefTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/ChefTheme.ActionBar</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/ChefTheme.TextView</item>
        <item name="android:editTextStyle">@style/ChefTheme.EditText</item>
        <item name="android:buttonStyle">@style/ChefTheme.Button</item>
        <item name="android:listViewStyle">@style/ChefTheme.ListView</item>
    </style>

    <style name="ChefTheme.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/ChefTheme.ActionBar.Text</item>
    </style>

    <style name="ChefTheme.ActionBar.Text" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="ChefTheme.TextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="ChefTheme.TextView.Title" parent="ChefTheme.TextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ChefTheme.EditText" parent="android:Widget.EditText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ChefTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="ChefTheme.Button.Icon" parent="ChefTheme.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ChefTheme.Button.Navigation" parent="ChefTheme.Button">
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_gravity">left|top</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="ChefTheme.Button.Navigation.Double" parent="ChefTheme.Button.Navigation">
        <item name="android:layout_columnSpan">2</item>
        <item name="android:layout_gravity">fill_horizontal|top</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="ChefTheme.ListView" parent="Widget.AppCompat.ListView">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">6.0sp</item>
    </style>

    <style name="ChefTheme.ListItem" parent="ChefTheme.Button">
        <item name="android:background">@android:color/background_light</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>
</resources>
