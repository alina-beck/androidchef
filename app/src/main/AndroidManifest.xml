<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ava.androidchef">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".features.onboarding.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".features.addrecipe.NewRecipeActivity"
            android:label="@string/new_recipe" />
        <activity
            android:name=".features.weeklymenu.WeeklyMenuActivity"
            android:label="@string/weekly_menu" />
        <activity
            android:name=".features.allrecipes.AllRecipesActivity"
            android:label="@string/my_recipes"
            android:windowSoftInputMode="adjustPan"/>
    </application>

</manifest>
